<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/medical_id"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:text="@string/medical_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/doctor_name_edit_text"
        android:layout_below="@id/medical_id"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/doctor_name"
        android:layout_below="@id/medical_id"
        android:layout_alignParentRight="true"
        android:text="@string/doctor_name"
        android:textColor="@color/black_color"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:textSize="25sp" />

    ////////////

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/used_medicine_edit_text"
        android:layout_below="@id/doctor_name_edit_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/used_medicine"
        android:layout_below="@id/doctor_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:text="@string/medicine"
        android:textColor="@color/black_color"
        android:paddingRight="20dp"
        android:textSize="25sp" />
    //////////

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/other_diseases_edit_text"
        android:layout_below="@id/used_medicine_edit_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/other_diseases"
        android:layout_below="@id/used_medicine"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:text="@string/other_diseases"
        android:textColor="@color/black_color"
        android:paddingRight="20dp"
        android:textSize="25sp" />

    //////////

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/living_place_edit_text"
        android:layout_below="@id/other_diseases_edit_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/living_place"
        android:layout_below="@id/other_diseases"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:text="@string/living_place"
        android:textColor="@color/black_color"
        android:paddingRight="20dp"
        android:textSize="25sp" />
    ////////

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/trusted_person_number_edit_text"
        android:layout_below="@id/living_place_edit_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/trusted_person_number"
        android:layout_below="@id/living_place"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:text="@string/trusted_person_number"
        android:textColor="@color/black_color"
        android:paddingRight="20dp"
        android:textSize="25sp" />
    /////////
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/medical_sign_up"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textSize="25sp"/>

</RelativeLayout>